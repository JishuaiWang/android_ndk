<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomePage">

    <include layout="@layout/title"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="100%"/>

    <ScrollView
        android:id="@+id/whiteScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="67%"
        app:layout_widthPercent="96%"
        app:layout_marginLeftPercent = "2%"
        app:layout_marginTopPercent="19%"
        android:fadeScrollbars="true"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        android:typeface="monospace">

        <LinearLayout
            android:id="@+id/whiteList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:orientation="vertical"
            android:typeface="monospace"
            tools:ignore="ScrollViewSize" />
    </ScrollView>

    <Button
        android:background="@drawable/ripple_bg"
        android:id="@+id/listAdd"
        android:layout_alignParentStart="true"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="20%"
        app:layout_marginTopPercent="90%"
        android:layout_marginStart="20dp"
        android:text="@string/add" />

    <Button
        android:background="@drawable/ripple_bg"
        android:id="@+id/insertList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="20%"
        app:layout_marginTopPercent="90%"
        app:layout_marginLeftPercent = "28%"
        android:text="@string/inset" />

    <Button
        android:background="@drawable/ripple_bg"
        android:id="@+id/editList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="20%"
        app:layout_marginTopPercent="90%"
        app:layout_marginLeftPercent = "52%"
        android:text="@string/edit" />

    <Button
        android:background="@drawable/ripple_bg"
        android:id="@+id/delList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="20%"
        app:layout_marginTopPercent="90%"
        app:layout_marginLeftPercent = "76%"
        android:text="@string/delete" />

    <TextView
        android:textSize="19sp"
        android:gravity="center|left"
        android:text="@string/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="11%"
        app:layout_marginLeftPercent = "7%"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:textSize="19sp"
        android:gravity="center|left"
        android:text="@string/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="11%"
        app:layout_marginLeftPercent = "18%"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:textSize="19sp"
        android:gravity="center|left"
        android:text="@string/unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="11%"
        app:layout_marginLeftPercent = "32%"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:textSize="19sp"
        android:gravity="center"
        android:text="@string/IMSI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="11%"
        app:layout_marginLeftPercent = "47%" />

    <TextView
        android:textSize="19sp"
        android:gravity="center"
        android:text="@string/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="11%"
        app:layout_marginLeftPercent = "61%"/>

    <TextView
        android:textSize="19sp"
        android:gravity="center"
        android:text="@string/remark_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="11%"
        app:layout_marginLeftPercent = "89%"/>

    <TextView
        android:textSize="19sp"
        android:gravity="center"
        android:text="@string/carrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="11%"
        app:layout_marginLeftPercent = "75%"/>
</android.support.percent.PercentRelativeLayout>